.weapon-slot {
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px;
    margin: 5px;
    border: 1px solid #ccc;
    background-color: #f9f9f9;
    border-radius: 5px;
}

.weapon-icon {
    width: 64px;
    height: 64px;
    margin-bottom: 5px;
}

.weapon-name {
    font-size: 12px;
    color: #333;
    text-align: center;
}